<main class="container">
  <section class="d-flex justify-content-between align-items-baseline">
    <% if user_signed_in? %>
      <h3> Fairway Finder </h3>
      <span>
        <span class="navbar-link d-none d-md-block">
          <% if current_user.avatar_url? %>
            <%= image_tag current_user.avatar_url, {title: 'Edit Account', :class => 'rounded-circle' }%>
          <% else %>
            <%= link_to_image(
              "avatar.png", edit_user_registration_path, {title: 'Edit Account', :class => 'rounded-circle' }
            ) %>
          <% end %>
        </span>
        <%= link_to "Logout", destroy_user_session_path	, method: :delete  %>
      </span>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
  </section>
  <% if user_signed_in? %>
    <%# some auth will be here to pre-filter courses permitted to be managed by this user %>
    <%= button_to "see courses", admin_courses_path, method: :get %>
  <% end %>
</main>
