<main class="container">
  <p style="color: green"><%= notice %></p>
  <h1 class="">Manage Courses</h1>
  <section class="d-flex justify-content-between my-3">
    <%= link_to "New course", new_admin_course_path %>
    <% unless user_signed_in? %>
      <%= link_to "Sign Up", new_user_registration_path %>
      <%= link_to "Sign In", new_user_session_path %>
    <% end %>
    <% if user_signed_in? %>
      <%= button_to "Sign out", destroy_user_session_path, :method => :delete %>
    <% end %>
  </section>
  <div id="courses">
    <% @courses.each do |course| %>
      <dl>
        <dt>
          <%= link_to course.course_name, [:admin, course] %>
        </dt>
        <dd>
          <%= course.holes.count%> /
          <%= course.hole_count%> holes added | 
          <% if course.holes.any? %>
            Par <%=course.course_par%>
          <% end %>
        </dd>
        <hr/>
      </dl>
    <% end %>
  </div>
</main>
