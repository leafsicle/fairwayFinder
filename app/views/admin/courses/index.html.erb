<main class="container">
  <p style="color: green"><%= notice %></p>
  <section class="d-flex justify-content-end my-3">
    <p class="justify-content-end">
      <% if user_signed_in? %>
        Hey, <%= current_user.first_name %> Logged in as <strong><%= current_user.email %></strong>.
        <%= link_to_image("edit_icon.svg", edit_user_registration_path, {title: 'Edit Account', :class => 'navbar-link' })%>
        <%= link_to "Logout", destroy_user_session_path	, method: :delete  %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </p>
    <span>
      <%# <%= image_tag(current_user.avatar) %>
    </span>
  </section>
  <% if user_signed_in? %>
    <h1 class="">Manage Courses</h1>
    <div id="courses">
      <%if current_user.admin? %>
        <%= link_to "Create new course", new_admin_course_path %>
      <%end%>
      <% @courses.each do |course| %>
        <dl>
          <dt>
            <%= link_to course.course_name, [:admin, course] %>
          </dt>
          <dd>
            <%= course.holes.count%> /
            <%= course.hole_count%> holes added | 
            <% if course.holes.any? %>
              Par <%=course.course_par%>
            <% end %>
          </dd>
          <hr/>
        </dl>
      <% end %>
    </div>
  <%  end %>
</main>
