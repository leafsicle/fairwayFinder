<main class="container mt-3">
  <section class="d-flex justify-content-between align-items-baseline shadow p-3 mb-5 bg-body rounded" >
    <% if user_signed_in? %>
      <h3> Fairway Finder </h3>
      <span>
        <span class="navbar-link d-none d-md-block">
          <% if current_user.avatar_url? %>
            <%= link_to edit_user_registration_path do%>
              <%= image_tag current_user.avatar_url, {title: 'Edit Account', :class => 'rounded-circle' }%>
            <% end %>
          <% else %>
            <%= link_to_image(
              "avatar.png",edit_user_registration_path, {title: 'Edit Account', :class => 'navbar-link rounded-circle' }
            ) %>
          <% end %>
        </span>
        <%= link_to "Logout", destroy_user_session_path	, method: :delete  %>
      </span>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
  </section>
  <% if user_signed_in? %>
    <h1 class="">Manage Courses</h1>
    <%= link_to "Add Course", new_admin_course_path, :class => 'btn btn-primary my-1'  %>
    <div class="my-4">
      <div id="courses">
        <%if current_user.admin? %>
          <%= link_to "Create new course", new_admin_course_path %>
        <%end%>
        <% @courses.each do |course| %>
          <div class="d-flex justify-content-between shadow p-3 mb-5 bg-body rounded">
            <dl class="d-flex flex-column " >
              <dt>
                <%= link_to course.course_name, [:admin, course] %>
              </dt>
              <dd>
                <%= course.holes.count%> /
                <%= course.hole_count%> holes added | 
                <% if course.holes.any? %>
                  Par <%=course.course_par%>
                <% end %>
              </dd>
            </dl>
            <%= link_to "play!", new_admin_course_scorecard_url(course), method: :get,:class => 'btn btn-success my-auto
            ' %>
          </div>
          <hr/>
        <% end %>
      </div>
    <%  end %>
  </div>
</main>
