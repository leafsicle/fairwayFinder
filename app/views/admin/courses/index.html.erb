<main class="container">
  <p style="color: green"><%= notice %></p>
  <h1 class="" >Courses</h1>
  <div id="courses">
    <% @courses.each do |course| %>
      <dl class="">
        <dt>
          <%= link_to course.course_name, [:admin, course] %>
        </dt>
        <dd>
          <%= course.holes.count%> /
          <%= course.hole_count%> holes added | 
          <% if course.holes.any? %>
            Par <%=course.course_par%>
          <% end %>
        </dd>
        <hr/>
      </dl>
    <% end %>
  </div>
  <%= link_to "New course", new_admin_course_path %>
</main>
