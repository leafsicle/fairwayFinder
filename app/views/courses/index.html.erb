<h1>Courses</h1>

<div id="courses">
  <% @courses.each do |course| %>
    <p>
      <%= link_to course.course_name, course %> - <%= course.hole_count%>
      Par value <%=course.holes.sum(par_value)%>
    </p>
    
  <% end %>
</div>

